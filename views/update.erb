 <h1> This is your first step into the world of Wizardary</h1>

<form method="post" action="/hogwarts/<%= @student.id%>">
  <label for="first-name"> First Name  :</label>

  <input id="first-name" type="text" name="first_name" value= <%=@student.first_name %> />

  <label for="last-name">Last Name:</label>
  <input id="last-name" type="text" name="last_name" value= <%=@student.last_name %> />
  <hr />

  <label for="house_id">House:</label>
  <select name="house_id" id="house_id">
    <% for house in @house %>
      <option <%="selected" if house.id == @student.house.id%> value="<%=house.rand_house.id%>"><%=house.name%></option>
    <% end %>
  </select>

  <hr />
  <label for="age">Age:</label>
  <input id="age" type="number" name="age" value= <%=@student.age %> />
  <input type="submit"  value="Submit Your application">
    <hr />
</form>
